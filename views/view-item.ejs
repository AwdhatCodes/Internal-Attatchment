<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Item</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: url('https://cdn.pixabay.com/photo/2022/06/24/13/57/woman-7281733_960_720.jpg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            padding: 30px;
            width: 80%;
            max-width: 600px;
            margin-top: 50px;
            animation: fadeIn 0.6s ease-out;
        }

        h1 {
            text-align: center;
            color: #344955;
            font-size: 2em;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .item-detail {
            margin-bottom: 20px;
            font-size: 1.1em;
        }

        .item-detail p {
            margin: 5px 0;
            color: #344955;
        }

        .item-detail p strong {
            font-weight: 500;
            color: #F9AA33;
        }

        .additional-info {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-top: 20px;
            animation: slideIn 0.8s ease-out;
        }

        .additional-info .info-section {
            background-color: #F9AA33;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            width: 48%;
            margin-bottom: 10px;
            animation: fadeIn 0.8s ease-out;
            color: #344955;
        }

        .info-section h3 {
            margin: 0 0 10px 0;
            color: #344955;
        }

        .info-section p {
            margin: 0;
        }

        .button-group {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .button-group button {
            padding: 12px 24px;
            border: none;
            background-color: #344955;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            margin: 0 10px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .button-group button:hover {
            background-color: #232F34;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Item Details</h1>
        <div class="item-detail">
            <p><strong>Item Name:</strong> <%= item.itemName %></p>
            <p><strong>Type:</strong> <%= item.type %></p>
            <p><strong>Quantity:</strong> <%= item.quantity %></p>
            <p><strong>Description:</strong> <%= item.description %></p>
            <p><strong>Added on:</strong> <%= item.timestamp.toLocaleString() %></p>
        </div>
        <div class="additional-info">
            <div class="info-section">
                <h3>Storage Conditions</h3>
                <p><strong>Temperature:</strong> 22Â°C</p>
                <p><strong>Humidity:</strong> 60%</p>
                <p><strong>Light Intensity:</strong> 1000 lux (70%)</p>
            </div>
            <div class="info-section">
                <h3>Location</h3>
                <p><strong>Room:</strong> A1</p>
                <p><strong>Shelf:</strong> 3</p>
            </div>
        </div>
        <div class="button-group">
            <button onclick="window.location.href='/inventory'">Back to Inventory</button>
            <button onclick="deleteItem('<%= item._id %>')">Delete Item</button>
        </div>
    </div>
    <script>
        function deleteItem(itemId) {
            if (confirm('Are you sure you want to delete this item?')) {
                fetch(`/delete-item/${itemId}`, {
                    method: 'DELETE'
                }).then(response => {
                    if (response.ok) {
                        window.location.href = '/inventory';
                    } else {
                        alert('Failed to delete item');
                    }
                });
            }
        }
    </script>
</body>
</html>
